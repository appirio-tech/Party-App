<%= page do %>
  <%= header do %>
    <%= link_to "Back", conferences_path, 'data-icon' => 'back', 'data-direction' => 'reverse' %>
    <h1>View Conference</h1>
    <%= link_to "Edit", edit_conference_path(@conference), 'data-rel' => 'dialog' %>
  <% end %>
  <%= content do %>
    <ul>
      <li><b>Name:</b> <%= @conference.name %></li>
      <li><b>Hashtag:</b> <%= @conference.hashtag %></li>
      <li><b>Domain:</b> <code><%= @conference.domain %></code></li>
    </ul>

    <ul data-role='listview' data-inset='true'>
      <li><%= link_to 'Visit This Conference', "http://#{@conference.domain}", 'rel'  => 'external'%></li>      
      <li data-icon='delete'><%= link_to 'Delete This Conference', conference_path(@conference), method: 'delete', confirm: 'Are you sure?' %></li>
    </ul>
  <% end %>
<% end %>
